{
    "manifest_version": 3,
    "name": "sync for Chrome",
    "version": "0.0.3",
    "description": "A simple and easy way to sync video playback in Netflix.",
    "homepage_url": "https://github.com/ajchili/sync_chrome",
    "permissions": [
        "tabs"
    ],
    "background": {
        "page": "background.html",
        "persistent": true
    },
    "content_scripts": [{
        "css": ["css/sync.css"],
        "js": ["js/content.js"],
        "matches": ["https://www.netflix.com/*"]
    }],
    "content_security_policy": "script-src 'self' https://www.gstatic.com *//*.firebaseio.*; object-src 'self'"
}